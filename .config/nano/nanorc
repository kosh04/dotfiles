# .nanorc -- GNU nano ~v7.2

# see also:
# - https://nano-editor.org/dist/latest/nanorc.5.html
# - https://nano-editor.org/dist/latest/ChangeLog

unset autoindent	# [-i, --autoindent]
set casesensitive	# onsearch
#unset const		# [-c, --const] always show line/cursor position status line
unset noconvert		# [-N, --noconvert] dont't convert from DOS
unset nohelp		# [-x, --nohelp] no bottom help
set quickblank		# [-U, --quickblank] clear bottom status after 1 keystroke
set tabsize 8		# [-T, --tabsize=cols]
set historylog		# [-H, --historylog] ~/.nano.history
unset tabstospaces	# [-E, --tabstospaces] use spaces instead of tabs
set nowrap		# [-w, --nowrap] Don't wrap text at all.
set linenumbers         # [-l, --line-numbers]

## Deprecated Options

#set morespace		# [-O, --morespace] no top blank line
#set smooth		# [-S, --smooth] scoll smooth without jumping cursor to center

# Option -z (--suspendable) has been removed. (v6.0~v6.4)
# Suspension is enabled by default, reachable via ^T^Z.
#set suspend		# [-z, --suspend] Enable suzpend (Ctrl-Z)

